<span class="uploader">

  {{#if button}}
    {{ui-button title=button icon=icon disabled=(not data) size=size mood=mood}}
  {{else}}
    <span class="display-area">
      {{#if icon}}
        {{ui-icon icon=icon}}
      {{/if}}
      <span class="text">{{text}}{{yield}}</span>
    </span>
  {{/if}}
</span>
<a class="hidden-link" href="{{url}}" download="{{filename}}"></a>
